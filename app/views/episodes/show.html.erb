<h2>Episode Date:</h2>
<h3><%= @episode.date %></h3><br>
<h2>Average Rating:</h2>
<% @avg = (@avg_rating.sum).to_f.round/(@avg_rating.size).to_f %>
<h3><%= @avg.round(2) %></h3><br><br>

<h2> Guests: </h2>
<% @episode.guests.each do |guest| %>
    <h3><%= link_to guest.name, guest_path(guest) %></h3>
<% end %>