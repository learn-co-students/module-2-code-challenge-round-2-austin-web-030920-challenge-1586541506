<h1>New Appearance: </h1>
<%= form_for (@appearance) do |f|%>

<%= f.label "Choose a Guest" %> <br>
<%= f.collection_select(:guest_id, Guest.all, :id, :name, prompt: true) %>
<br><br>

<%= f.label "Choose an Episode" %> <br>
<%= f.collection_select(:episode_id, Episode.all, :id, :number, prompt: true) %>
<br><br>

Choose <%= f.label :rating %>  (1-5)<br>
<%= f.text_field :rating %> <br><br>

<%= f.submit%>

<% end %>